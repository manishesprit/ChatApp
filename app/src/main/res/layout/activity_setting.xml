<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_gray">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/color_graydark"
            app:layout_scrollFlags="scroll|enterAlways" />

    </android.support.design.widget.AppBarLayout>


    <RelativeLayout
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/padding_twenty"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <TextView
            android:id="@+id/txtEditProfile"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:elevation="3dp"
            android:padding="@dimen/padding_ten"
            android:text="Edit Profile"
            android:textColor="@color/color_white"
            android:textSize="@dimen/extraMediumText" />

        <TextView
            android:id="@+id/txtChangePassword"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtEditProfile"
            android:elevation="3dp"
            android:padding="@dimen/padding_ten"
            android:text="Change password"
            android:textColor="@color/color_white"
            android:textSize="@dimen/extraMediumText" />

        <TextView
            android:id="@+id/txtLogout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtChangePassword"
            android:layout_marginTop="@dimen/padding_ten"
            android:elevation="3dp"
            android:padding="@dimen/padding_ten"
            android:text="Logout"
            android:textColor="@color/color_white"
            android:textSize="@dimen/extraMediumText" />


    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>