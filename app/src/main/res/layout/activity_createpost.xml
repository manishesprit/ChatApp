<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llDialogMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colortrans">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/padding_thrty"
        android:background="@drawable/corner_drawable"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/padding_ten"
            android:text="New Post"
            android:textColor="@color/color_dark"
            android:textSize="@dimen/largeText" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.2dp"
            android:background="@color/color_whitedark"
            android:elevation="2dp"></View>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_five"
            android:background="@color/color_white"
            android:hint="what's our mind!"
            android:padding="@dimen/padding_five"
            android:gravity="top"
            android:lines="4" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@color/color_white"
                android:elevation="3dp"
                android:gravity="center"
                android:padding="@dimen/padding_ten"
                android:text="Gallary"
                android:textColor="@color/color_bluedark"
                android:textSize="@dimen/medium1Text" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@color/color_white"
                android:elevation="3dp"
                android:gravity="center"
                android:padding="@dimen/padding_ten"
                android:text="Camara"
                android:textColor="@color/color_bluedark"
                android:textSize="@dimen/medium1Text" />
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_corner_drawable"
            android:elevation="3dp"
            android:gravity="center"
            android:padding="@dimen/padding_ten"
            android:text="Submit"
            android:textColor="@color/color_white"
            android:textSize="@dimen/largeText" />

    </LinearLayout>

</RelativeLayout>