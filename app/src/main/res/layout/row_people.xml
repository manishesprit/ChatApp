<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_gray"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/padding_ten">

    <ImageView
        android:id="@+id/imgAvatar"
        android:layout_width="@dimen/login_logo_size"
        android:layout_height="@dimen/login_logo_size"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true" />


    <TextView
        android:id="@+id/txtUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manish Rathod"
        android:textColor="@color/color_white"
        android:textSize="@dimen/extraMediumText" />

    <TextView
        android:id="@+id/txtfollowUnfollow"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_five"
        android:background="@color/color_dark"
        android:elevation="3dp"
        android:gravity="center"
        android:paddingBottom="@dimen/padding_five"
        android:paddingTop="@dimen/padding_five"
        android:text="Unfollow"
        android:textColor="@color/color_white"
        android:textSize="@dimen/extraMediumText" />
</LinearLayout>

