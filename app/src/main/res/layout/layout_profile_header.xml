<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_dark"
    android:paddingBottom="@dimen/padding_fifteen"
    android:paddingTop="@dimen/padding_fifteen"
    android:paddingLeft="@dimen/padding_ten"
    android:elevation="2dp"
    android:paddingRight="@dimen/padding_ten"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgProfileAvatar"
        android:layout_width="@dimen/profile_avatar_size"
        android:layout_height="@dimen/profile_avatar_size"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/iconlogo" />

    <RelativeLayout
        android:id="@+id/rlAvatar"
        android:layout_width="@dimen/profile_avatar_size"
        android:layout_height="@dimen/profile_avatar_size"
        android:layout_alignParentTop="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/edit_gray"></ImageView>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/profile_avatar_size"
        android:layout_toRightOf="@+id/imgProfileAvatar"
        android:gravity="center_vertical"
        android:padding="@dimen/padding_five"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/padding_ten">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test User"
                android:textColor="@color/color_white"
                android:textSize="@dimen/largeText" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/padding_five"
            android:weightSum="30">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="posts"
                    android:textColor="@color/color_whitedark"
                    android:textSize="@dimen/smallText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="27"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/extraMediumText" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="11"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="followers"
                    android:textColor="@color/color_whitedark"
                    android:textSize="@dimen/smallText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1420"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/extraMediumText" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="11"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="following"
                    android:textColor="@color/color_whitedark"
                    android:textSize="@dimen/smallText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="144"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/extraMediumText" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>